# ============================================================================
# RAG CHAT SYSTEM - CONFIGURATION
# ============================================================================
# Copy this file to .env and customize as needed
#
# MINIMAL SETUP (works out of the box):
# - LLM_PROVIDER=ollama
# - LLM_MODEL=phi3:mini
#
# All other settings are optional with sensible defaults
# ============================================================================

# ============================================================================
# MINIMAL CONFIGURATION (required - already set to defaults)
# ============================================================================

# LLM Provider (local model via Ollama)
LLM_PROVIDER=ollama

# LLM Model (fast, German-optimized, 2.3GB)
LLM_MODEL=phi3:mini

# ============================================================================
# CLOUD LLM PROVIDERS (optional - for better quality)
# ============================================================================

# OpenAI Configuration
# Get API key: https://platform.openai.com/api-keys
# Uncomment to use:
#LLM_PROVIDER=openai
#OPENAI_API_KEY=sk-...

# Anthropic Configuration
# Get API key: https://console.anthropic.com/
# Uncomment to use:
#LLM_PROVIDER=anthropic
#ANTHROPIC_API_KEY=sk-ant-...

# ============================================================================
# ADVANCED LLM SETTINGS (optional - defaults work well)
# ============================================================================

# Response creativity (0=precise, 1=creative)
#LLM_TEMPERATURE=0.0

# Maximum response length in tokens
#LLM_MAX_TOKENS=4096

# Request timeout in seconds
#LLM_TIMEOUT=30

# ============================================================================
# DOCUMENT PROCESSING (optional - defaults optimized for German)
# ============================================================================

# Parser quality vs speed
#USE_DOCLING_PARSER=true              # true=better quality, false=faster

# Metadata extraction
#USE_LLM_METADATA_EXTRACTION=false    # true=AI-powered (slow), false=fast

# Chunking strategy (tokens)
#PARENT_CHUNK_SIZE=2000               # Context window size
#PARENT_CHUNK_OVERLAP=400             # Overlap for consistency
#CHILD_CHUNK_SIZE=400                 # Retrieval chunk size
#CHILD_CHUNK_OVERLAP=80               # Overlap for retrieval

# ============================================================================
# SEARCH & RETRIEVAL (optional - defaults balanced for accuracy/speed)
# ============================================================================

# Models (German-optimized defaults)
#EMBEDDING_MODEL=mixedbread-ai/deepset-mxbai-embed-de-large-v1
#RERANKER_MODEL=BAAI/bge-reranker-v2-m3

# Search settings
#TOP_K_RETRIEVAL=20                   # Initial candidates
#TOP_K_RERANK=6                       # Final results after reranking
#EMBEDDING_BATCH_SIZE=32              # Processing batch size

# Context expansion
#ENABLE_NEIGHBOR_EXPANSION=true       # Load neighboring chunks
#NEIGHBOR_EXPANSION_WINDOW=4          # Number of neighbors

# ============================================================================
# ZOTERO INTEGRATION (optional - leave empty to disable)
# ============================================================================

# Enable automatic document sync from Zotero
# Setup: https://www.zotero.org/settings/keys
#ZOTERO_LIBRARY_ID=                   # Your library ID (numeric)
#ZOTERO_API_KEY=                      # Your API key
#ZOTERO_LIBRARY_TYPE=user             # "user" or "group"

# ============================================================================
# SYSTEM SETTINGS (optional - usually no changes needed)
# ============================================================================

# Logging level
#LOG_LEVEL=INFO                       # DEBUG, INFO, WARNING, ERROR

# Storage paths (handled by Docker)
#DATA_DIR=/app/data
#MODELS_CACHE_DIR=/app/models

# Database connection (configured in docker-compose.yml)
#DATABASE_URL=postgresql://rag_user:rag_password@postgres:5432/rag_db

# Vector store connection
#QDRANT_HOST=qdrant
#QDRANT_PORT=6333

