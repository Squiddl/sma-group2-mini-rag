# ===========================================
# RAG System Configuration
# ===========================================
# -------------------------------------------
# Anthropic Claude (Recommended)
# -------------------------------------------
ANTHROPIC_API_KEY=your-api-key-here
LLM_MODEL=claude-sonnet-4-5-20250929
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096
LLM_TIMEOUT=60.0

# -------------------------------------------
# Database Configuration
# -------------------------------------------
DATABASE_URL=postgresql://raguser:ragpass@postgres:5432/ragdb

# -------------------------------------------
# Qdrant Vector Database
# -------------------------------------------
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_PREFER_GRPC=true
QDRANT_COLLECTION_PREFIX=doc_

# -------------------------------------------
# Embedding Models
# -------------------------------------------
EMBEDDING_MODEL=mixedbread-ai/deepset-mxbai-embed-de-large-v1
RERANKER_MODEL=BAAI/bge-reranker-v2-m3
EMBEDDING_CACHE_SIZE=10000

# -------------------------------------------
# Chunking Settings
# -------------------------------------------
CHUNK_SIZE=1000
CHUNK_OVERLAP=180
PARENT_CHUNK_SIZE=2000
PARENT_CHUNK_OVERLAP=400
CHILD_CHUNK_SIZE=400
CHILD_CHUNK_OVERLAP=80

# -------------------------------------------
# Retrieval Settings
# -------------------------------------------
ENABLE_NEIGHBOR_EXPANSION=true
NEIGHBOR_EXPANSION_WINDOW=4
TOP_K_RETRIEVAL=20
TOP_K_RERANK=6

# -------------------------------------------
# Performance Optimizations
# -------------------------------------------
QUERY_EXPANSION_CACHE_SIZE=1000
QUERY_EXPANSION_CACHE_TTL=3600

# -------------------------------------------
# Paths (Docker)
# -------------------------------------------
DATA_DIR=/app/data
MODEL_CACHE_DIR=/app/models